{
    "extends": "eslint:all",
    "plugins": [
        "standard",
        "promise"
    ],
    "rules": {
            "no-var": 2, // require let or const instead of var (off by default)
            "linebreak-style": ["error", "windows"],
            "no-undef": 0,
            "sort-vars": 1,
            "one-var": 1,
            "func-names": 1,
            "prefer-arrow-callback": 0,
            "padded-blocks": 0,
            "no-magic-numbers": 0,
            "no-trailing-spaces": 0,
            "prefer-template": 0,
            "no-multi-spaces": 0,
            "no-console": 0,
            "eol-last": 0
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    }
}